{% extends 'base.html.twig' %}

{% block title %}Consulta de Animais{% endblock %}

{% block body %}
    <h1>Consulta de Animais</h1>
    <hr />

    <div class="row">
        <div class="col-md-12 form-group">
            <a href="{{ path('animais_create') }}" class="btn btn-primary pull-right">Novo Animal</a>
        </div>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Data Nasc.</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animais %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>
                    <a href="{{ path('animais_view', {'id': animal.id}) }}" title="Visualizar detalhes deste registro">
                        {{ animal.nome }}
                    </a>
                </td>
                <td>{{ animal.dataNascimento|date('d/m/Y') }}</td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Nenhum registro encontrado.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}